@model T4EmployeesMVC.Models.user
@{
    ViewBag.Title = "SignIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="login-block" style="margin:10%;background-color:white">
    <div class="container">
        <div class="row">
            <div class="col-md-4 login-sec">
                <h2 class="text-center">Login Now</h2>

                @using (Html.BeginForm("SignIn", "Home", FormMethod.Post, new { @class = "login-form" }))
                {

                    <div class="form-group">
                        <label for="exampleInputEmail1" class="text-uppercase">Username</label>
                        @Html.TextBoxFor(model => model.UserName, new { @type = "text", @class = "form-control" })



                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1" class="text-uppercase">Password</label>
                        @Html.TextBoxFor(model => model.Passwrd, new { @type = "password", @class = "form-control" })

                    </div>
                    @Html.ValidationMessageFor(model => model.Passwrd)

            <div class="form-check">
             
                <button type="submit" class="btn btn-login float-right">Se connecter</button>
                @ViewBag.wronglogin
           
            </div>
   

                }

            </div>

            <div class="col-md-8 banner-sec">


                <img src="https://www.northeastern.edu/bachelors-completion/wp-content/uploads/2019/09/Accountant-Hero-1.jpg" alt="First slide">
            </div>
        </div>
    </div>
</section>